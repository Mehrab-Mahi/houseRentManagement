@{
    ViewData["Title"] = "InvoicePRO | Login";
    Layout = Layout = "_LoginLayout";
}
<div class="login-content">

    <div class="form-login-error">
        <h3>Invalid login</h3>
        <p id="error_msg"></p>
    </div>

    <form asp-controller="Account" asp-action="Login" method="post"role="form" id="form_login">
       
            <div class="form-group">

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="entypo-user"></i>
                    </div>

                    <input type="text" class="form-control" name="Email" id="Email" placeholder="Username/Email" autocomplete="off" />
                </div>

            </div>

            <div class="form-group">

                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="entypo-key"></i>
                    </div>

                    <input type="password" class="form-control" name="Password" id="Password" placeholder="Password" autocomplete="off" />
                </div>

            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block btn-login">
                    <i class="entypo-login"></i>
                    Login 
                </button>
            </div>


        </form>


        <div class="login-bottom-links">

            <a href="extra-forgot-password.html" class="link">Forgot your password?</a>
            @*<a href="/Register/Index" class="link">Register</a>*@

            <br />

            <a href="#">ToS</a>  - <a href="#">Privacy Policy</a>

        </div>

</div>
